#include <iostream>
using namespace std;

int main() {
    int x = 0, y = 0;
    char move;
    
    
    cout << "Player starts at (0,0)" << endl;
    cout << "Press W, A, S, or D to move, Q to quit" << endl;
    
    while (true) {
        cout << "\nEnter Move: ";
        cin >> move;
        
        if (move == 'W' || move == 'w') {
            y += 1;
        }
        
        else if (move == 'S' || move == 's') {
            y -= 1;
        }
        
        else if (move == 'D' || move == 'd') {
            x += 1;
        }
        
        else if (move == 'A' || move == 'a') {
            x -= 1;
        }
        
        else if (move == 'Q' || move == 'q') {
            cout << "Game Over!" << endl;
            break;
        }
        
        else {
            cout << "Invalid key! Use W/A/S/D to move or Q to quit." << endl;
            continue;
        }
        
        cout << "Current position: (" << x << ", " << y << ")" << endl;
    }
    
    return 0;
    
}
