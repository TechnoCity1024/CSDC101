#include <iostream>
#include <cctype>
#include <limits>
using namespace std;

void problem1() {
    double money;
    cout << "Enter your money: ";
    cin >> money;
    int canBuy = (money >= 1.0);
    switch (canBuy) {
        case 1: cout << "Enjoy your lemonade!" << endl; break;
        default: cout << "Sorry, you need more money." << endl; break;
    }
}

void problem2() {
    int temperature;
    cout << "Enter the temperature today: ";
    cin >> temperature;
    int hot = (temperature >= 30);
    switch (hot) {
        case 1: cout << "You received a 20 percent discount!" << endl; break;
        default: cout << "You didn't receive a 20 percent discount!" << endl; break;
    }
}

void problem3() {
    int lemon;
    int sugar;
    cout << "Enter the amount of lemon: ";
    cin >> lemon;
    cout << "Enter the amount of sugar: ";
    cin >> sugar;
    int ready = (lemon > 0 && sugar > 0);
    switch (ready) {
        case 1: cout << "You're ready to sell lemonade!" << endl; break;
        default: cout << "You can't make lemonade!" << endl; break;
    }
}

void problem4() {
    int cups;
    cout << "How many cups? ";
    cin >> cups;
    int category;
    if (cups <= 4) category = 0;
    else if (cups <= 9) category = 1;
    else category = 2;

    int discountPercent;
    switch (category) {
        case 0: discountPercent = 0; break;
        case 1: discountPercent = 10; break;
        default: discountPercent = 20; break;
    }

    int totalCents = cups * 100;
    totalCents = totalCents * (100 - discountPercent) / 100;
    int dollars = totalCents / 100;
    int cents = totalCents % 100;
    cout << "Total Cost: $" << dollars << ".";
    if (cents < 10) cout << "0";
    cout << cents << endl;
}

void problem5() {
    int x = 0, y = 0;
    char move;
    cout << "Player starts at (0,0)" << endl;
    cout << "Press W, A, S, or D to move, Q to quit" << endl;
    while (true) {
        cout << "\nEnter Move: ";
        cin >> move;
        switch (toupper(move)) {
            case 'W': y += 1; break;
            case 'S': y -= 1; break;
            case 'D': x += 1; break;
            case 'A': x -= 1; break;
            case 'Q': cout << "Game Over!" << endl; return;
            default: cout << "Invalid key! Use W/A/S/D to move or Q to quit." << endl; continue;
        }
        cout << "Current position: (" << x << ", " << y << ")" << endl;
    }
}

int main() {
    int choice;
    while (true) {
        cout << "\nMenu (enter number):" << endl;
        cout << "1 - Basic Pricing Decision" << endl;
        cout << "2 - Weather-Based Discounts" << endl;
        cout << "3 - Inventory Check" << endl;
        cout << "4 - Bulk Purchase Discount" << endl;
        cout << "5 - Player Movement (continuous)" << endl;
        cout << "0 - Quit" << endl;
        cout << "Choice: ";

        if (!(cin >> choice)) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Invalid input. Please enter a number." << endl;
            continue;
        }

        if (choice == 0) {
            cout << "Exiting. Goodbye!" << endl;
            break;
        }

        switch (choice) {
            case 1: problem1(); break;
            case 2: problem2(); break;
            case 3: problem3(); break;
            case 4: problem4(); break;
            case 5: problem5(); break;
            default: cout << "Invalid choice. Please enter a number from 0 to 5." << endl; break;
        }
    }
    return 0;
}
