#include <iostream>
#include <cctype>
#include <limits>
using namespace std;

void problem1() {
    double money;
    cout << "Enter your money: ";
    cin >> money;
    if (money >= 1.0)
    cout << "Enjoy your lemonade!" << endl;
    else
    cout << "Sorry, you need more money." << endl;
    }


void problem2() {
    int temperature;
    cout << "Enter the temperature today: ";
    cin >> temperature;
    if (temperature >= 30)
    cout << "You received a 20 percent discount!" << endl;
    else
    cout << "You didn't receive a 20 percent discount!" << endl;
    }

void problem3() {
    int lemon;
    int sugar;
    cout << "Enter the amount of lemon: ";
    cin >> lemon;
    cout << "Enter the amount of sugar: ";
    cin >> sugar;
    if (lemon > 0 && sugar > 0) 
    cout << "You're ready to sell lemonade!" << endl;
    else
    cout << "You can't make lemonade!" << endl;
    }

void problem4() {
    int cups;
    double pricePerCup = 1.0;
    double totalCost, discount;
    cout << "How many cups? ";
    cin >> cups;
    totalCost = cups * pricePerCup;
    if (cups <= 4)
    discount = 0.0;
    else if (cups <= 9)
    discount = 0.10;
    else
    discount = 0.20;
    totalCost = totalCost - (totalCost * discount);
    cout << "Total Cost: $" << totalCost << endl;
    }

void problem5() {
    int x = 0, y = 0;
    char move;
    cout << "Player starts at (0,0)" << endl;
    cout << "Press W, A, S, or D to move, Q to quit" << endl;
    while (true)
    cout << "\nEnter Move: ";
    cin >> move;
    if (move == 'W' || move == 'w')
    y += 1;
    else if (move == 'S' || move == 's')
    y -= 1;
    else if (move == 'D' || move == 'd')
    x += 1;
    else if (move == 'A' || move == 'a')
    x -= 1;
    else if (move == 'Q' || move == 'q')
    cout << "Game Over!" << endl;
    break;
    else
    cout << "Invalid key! Use W/A/S/D to move or Q to quit." << endl;
    continue;
    cout << "Current position: (" << x << ", " << y << ")" << endl;
    }


int main() {
    int choice;
    while (true) {
        cout << "\nMenu (enter number):" << endl;
        cout << "1 - Basic Pricing Decision" << endl;
        cout << "2 - Weather-Based Discounts" << endl;
        cout << "3 - Inventory Check" << endl;
        cout << "4 - Bulk Purchase Discount" << endl;
        cout << "5 - Player Movement (single move)" << endl;
        cout << "0 - Quit" << endl;
        cout << "Choice: ";

        if (!(cin >> choice)) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Invalid input. Please enter a number." << endl;
            continue;
        }

        if (choice == 0) {
            cout << "Exiting. Goodbye!" << endl;
            break;
        }

        switch (choice) {
            case 1:
                problem1();
                break;
            case 2:
                problem2();
                break;
            case 3:
                problem3();
                break;
            case 4:
                problem4();
                break;
            case 5:
                problem5();
                break;
            default:
                cout << "Invalid choice. Please enter a number from 0 to 5." << endl;
                break;
        }
    }
    return 0;
}
